<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TerraSharp.Maui.Example.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TerraSharp.Maui.Example.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Shell.TabBarBackgroundColor="{DynamicResource PrimaryColor}">
        <Tab Title="Home" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Wallet">
            <ShellContent ContentTemplate="{DataTemplate local:Stake}" />
        </Tab>
        <Tab Title="History">
            <ShellContent ContentTemplate="{DataTemplate local:Stake}" />
        </Tab>
        <Tab Title="Governance">
            <ShellContent ContentTemplate="{DataTemplate local:Stake}" />
        </Tab>
    </TabBar>

</Shell>
