<?xml version="1.0" encoding="UTF-8" ?>
<Shell Background="{DynamicResource BackGroundColor}"
    x:Class="TerraSharp.Maui.Example.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TerraSharp.Maui.Example.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Shell.TabBarBackgroundColor="{DynamicResource PrimaryColor}" Shell.ForegroundColor="{DynamicResource Shell.ForegroundColor}">

        <Tab Title="WALLET" Icon="wallet.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="SWAP">
            <ShellContent ContentTemplate="{DataTemplate local:Swap}" />
        </Tab>
        
        <Tab Title="STAKE">
            <ShellContent ContentTemplate="{DataTemplate local:Stake}" />
        </Tab>
        
        <Tab Title="MORE">
            <ShellContent ContentTemplate="{DataTemplate local:More}" />
        </Tab>
    </TabBar>

</Shell>
